<div class="dash-flex-container">
  <div class="dash-flex1">
    <section class="dashboard-form">
      <%= link_to "#{@user.first_name} #{@user.last_name}", edit_user_path(@user.id) %>
      <%= form_for @rant, url: rants_path do |f| %>
        <div>
          <p>A rant about:</p>
          <%= f.text_field :description %>
        </div>
        <div>
          <p>Rant:</p>
          <%= f.text_area :rant, :size => '50x30' %>
        </div>
        <div class="rant-submit">
          <%= f.submit "RANT" %>
        </div>
      <% end %>
    </section>
  </div>


  <div class="dash-flex2">
    <h1 class="text-center rant-label">Favorites</h1>
    <% @favorites.each do |favorite| %>
      <div>
        <%= link_to favorite.rant.user.first_name, user_path(favorite.user) %>
      </div>
      <div>
        <%= favorite.rant.description %>
      </div>
      <div>
        <%= favorite.rant.rant %>
      </div>
    <% end %>
  </div>
</div>