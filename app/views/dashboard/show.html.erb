<div class="errors" xmlns="http://www.w3.org/1999/html">
  <% if @rant.errors.full_messages.any? %>
    <% @rant.errors.full_messages.each do |error| %>
      <%= error %>
      <br/>
    <% end %>

  <% end %>
</div>

<div class="dash-flex-container">
  <div class="dash-flex1">
    <section class="dashboard-form">
      <%= link_to "#{@user.first_name} #{@user.last_name}", edit_user_path %>
      <%= form_for @rant, url: rants_path do |f| %>
        <div>
          <p>A rant about:</p>
          <%= f.text_field :description %>
        </div>
        <div>
          <p>Rant:</p>
          <%= f.text_area :rant %>
        </div>

        <div class="rant-submit">
          <%= f.submit "RANT" %>
        </div>
      <% end %>
    </section>
  </div>


  <div class="dash-flex2">
    <h1 class="text-center rant-label">Latest Rants</h1>

    <% @users.each do |user| %>
      <div>
        <% user.rants.each do |rant| %>
          <% if rant.user_id != session[:user_id] %>

            <div><p class="font-10pt"><%= link_to "#{user.first_name}", user_path(user.id) %>

              |  <%= link_to rant.rant, rant_path(rant.id), class: 'rant-link' %></p></div>
            <% if current_user.following?(user) %>
              <%= unfollow_button(user) %>
            <% else %>
              <%= follow_button(user) %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <h1 class="text-center rant-label">My Rants</h1>
    <% @user.rants.each do |rant| %>
      <div>
      <%= rant.rant %>
        <%= link_to "Delete", "/rants/#{rant.id}", :method => :delete %>
      </div>
    <% end %>
  </div>
</div>

