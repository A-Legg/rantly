<article class="rant-form-container">

  <div class="errors">
    <% if @rant.errors.any? %>
      <% @rant.errors.full_messages.each do |error| %>
        <%= error %><br>
      <% end %>
    <% end %>
  </div>

  <div class="profile-link">
    <%= link_to "#{@user.first_name} #{@user.last_name}", edit_user_path(@user.id) %>
  </div>


  <div class="rant-form">


    <%= form_for @rant, url: rants_path do |f| %>
      <%= f.label :description, "A rant about:", class: "rant-description" %>
      <br>
      <%= f.text_field :description, class: "rant-description-textbox" %>
      <br>
      <%= f.label :rant, "Rant:", class: "rant-title" %>
      <br>
      <%= f.text_area :rant, class: "rant-textbox" %>
      <div class="rant-submit">
        <%= f.submit "RANT", class: "rant_button button_radius" %>
      </div>
    <% end %>

  </div>

</article>

<article class="dashboard-content">
  <section class="rants">

  <h1 class="latest-rants-header">Latest Rants</h1>
  <% @users.each do |user| %>
    <% user.rants.each do |rant| %>
      <% if rant.user_id != session[:user_id] %>

    <div class="rant-user-info">
       <%= link_to "#{user.first_name}", user_path(user.id) %>
      <div>
        <%= follow_link(user) %>
        </div>
      </div>
        <div class="rant-text">
            <%= link_to rant.rant, rant_path(rant.id), class: 'rant-link' %>
                <%= favorite_link(rant) %>
        </div>
        <% end %>
      <% end %>

  <% end %>
  <h1 class="my-rants-header">My Rants</h1>
  <% @user.rants.each do |rant| %>
    <div>
      <%= rant.rant %>
      <%= link_to "Delete", "/rants/#{rant.id}", :method => :delete %>
    </div>
  <% end %>
    </section>
</article>