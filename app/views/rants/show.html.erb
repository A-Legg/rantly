<article class="rant-form-container">
  <div class="errors">
    <% if @rant.errors.any? %>
      <% @rant.errors.full_messages.each do |error| %>
        <%= error %><br>
      <% end %>
    <% end %>
  </div>
  <div class="profile-pic">
    <%= image_tag current_user.avatar.url(:thumb) %>
  </div>
  <div class="profile-link">
    <%= link_to "#{@user.first_name} #{@user.last_name}", edit_user_path(@user.id) %>
  </div>
  <div class="rant-form">
    <%= form_for @rant, url: rants_path do |f| %>
      <%= f.label :description, "A rant about:", class: "rant-description" %>
      <br>
      <%= f.text_field :description, class: "rant-description-textbox" %>
      <br>
      <%= f.label :rant, "Rant:", class: "rant-title" %>
      <br>
      <%= f.text_area :rant, class: "rant-textbox" %>
      <div class="rant-submit">
        <%= f.submit "RANT", class: "rant_button button_radius" %>
      </div>
    <% end %>
  </div>
</article>

<article class="dashboard-content">
  <section class="rants">


    <h1 class="rant-show-header"><%= @rant.description %> <p><%= favorite_link(@rant) %></p></h1>

    <div>
      <p><%= link_to "#{@rant.user.first_name} #{@rant.user.last_name}", user_path(@rant.user.id) %></p>
      <%= @rant.rant %>  Favorites: <%=  @rant.favorites.count  %>

    </div>
  </div>
</div>

</section>
</article>