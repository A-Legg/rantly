<div class="errors">
  <% if @user.errors.full_messages.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <%= error %>
      <br/>
    <% end %>

  <% end %>
</div>


<%= link_to "#{@user.first_name} #{@user.last_name}", edit_user_path %>

<div class="rant-form">

  <%= form_for @rant, url: rants_path do |f| %>


    <%= f.label :rant %>
    <%= f.text_area :rant %>


    <%= f.submit "RANT" %>
  <% end %>
</div>

<h1>My Rants</h1>
<% @rant.each do |rant| %>

  <section class="my-rants">
    <li><%= rant.rant if rant.id == current_user.id %></li>
<% end %>
</section>



