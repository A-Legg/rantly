<div class="login-flex">
  <%= form_for @user, url: user_path(@user.id) do |f| %>
    <div class="errors">
      <% if @user.errors.full_messages.any? %>
        <% @user.errors.full_messages.each do |error| %>
          <%= error %>
          <br/>
        <% end %>
      <% end %>
    </div>
    <div class="edit-form">
      <div>
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
      <div>
        <%= f.label :bio %>
        <%= f.text_field :bio %>
      </div>
      <div>
        <%= f.label :frequency, "How often do you rant?" %>
        <br>
        <div>
          <%= f.radio_button :frequency, 'Daily' %>
          <%= f.label :frequency, 'Daily' %>
        </div>
        <div>
          <%= f.radio_button :frequency, 'Weekly' %>
          <%= f.label :frequency, 'Weekly' %>
        </div>
        <div>
          <%= f.radio_button :frequency, 'Monthly' %>
          <%= f.label :frequency, 'Monthly' %>
        </div>
        <div>
          <%= f.file_field :avatar %>
        </div>
        <div>
          <%= f.submit "Update" %>
        </div>
      </div>
  <% end %>
  </div>
</div>